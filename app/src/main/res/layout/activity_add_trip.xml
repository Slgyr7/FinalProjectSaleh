<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linlayaddtrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Add New Trip"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Image Upload -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imageCardView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTripImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/trip_image_desc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_photo"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/upload_image"
                    android:textColor="?attr/colorPrimary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Title Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_lyot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:startIconDrawable="@drawable/ic_title"
            app:startIconTint="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@android:color/darker_gray" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Location Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/location_lyot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:startIconDrawable="@drawable/ic_location"
            app:startIconTint="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/location"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@android:color/darker_gray" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Category Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/select_category"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/categoryChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/adventure"
                app:checkedIcon="@null"
                app:chipBackgroundColor="@color/category_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/culture"
                app:checkedIcon="@null"
                app:chipBackgroundColor="@color/category_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/nature"
                app:checkedIcon="@null"
                app:chipBackgroundColor="@color/category_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/food"
                app:checkedIcon="@null"
                app:chipBackgroundColor="@color/category_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/shopping"
                app:checkedIcon="@null"
                app:chipBackgroundColor="@color/category_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/relaxing"
                app:checkedIcon="@null"
                app:chipBackgroundColor="@color/category_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/historic_category"
                app:checkedIcon="@null"
                app:chipBackgroundColor="@color/category_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/religious"
                app:checkedIcon="@null"
                app:chipBackgroundColor="@color/category_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Price Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/price_lyot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:prefixText="â‚ª"
            app:prefixTextColor="?attr/colorPrimary"
            app:startIconDrawable="@drawable/ic_attach_money"
            app:startIconTint="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/price"
                android:inputType="number"
                android:maxLines="1"
                android:textColorHint="?android:attr/textColorSecondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Rating Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rating_lyot"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/rating_label"
            app:endIconContentDescription="@string/clear_rating"
            app:endIconDrawable="@drawable/ic_clear"
            app:endIconMode="clear_text"
            app:endIconTint="?attr/colorOnSurface"
            app:errorEnabled="true"
            app:helperText="@string/rating_hint_desc"
            app:helperTextTextColor="?android:attr/textColorSecondary"
            app:startIconDrawable="@drawable/ic_star_filled"
            app:startIconTint="@color/rating_progress">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789."
                android:hint="@string/rating_hint"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="?android:attr/textColorSecondary"
                android:textSize="16sp"
                tools:text="4.5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Vibe Tags -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/select_vibes"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/vibesChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/outdoors"
                app:checkedIcon="@drawable/ic_check"
                app:chipBackgroundColor="@color/vibe_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:closeIcon="@null"
                app:closeIconTint="?attr/colorPrimary" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/historic"
                app:checkedIcon="@drawable/ic_check"
                app:chipBackgroundColor="@color/vibe_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:closeIcon="@null"
                app:closeIconTint="?attr/colorPrimary" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scenic"
                app:checkedIcon="@drawable/ic_check"
                app:chipBackgroundColor="@color/vibe_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:closeIcon="@null"
                app:closeIconTint="?attr/colorPrimary" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/family_friendly"
                app:checkedIcon="@drawable/ic_check"
                app:chipBackgroundColor="@color/vibe_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:closeIcon="@null"
                app:closeIconTint="?attr/colorPrimary" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/romantic"
                app:checkedIcon="@drawable/ic_check"
                app:chipBackgroundColor="@color/vibe_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:closeIcon="@null"
                app:closeIconTint="?attr/colorPrimary" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_entry"
                app:checkedIcon="@drawable/ic_check"
                app:chipBackgroundColor="@color/vibe_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:closeIcon="@null"
                app:closeIconTint="?attr/colorPrimary" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hidden_gem"
                app:checkedIcon="@drawable/ic_check"
                app:chipBackgroundColor="@color/vibe_chip_selector"
                app:chipStrokeColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:closeIcon="@null"
                app:closeIconTint="?attr/colorPrimary" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/purple_500"
            android:paddingVertical="12dp"
            android:text="@string/add_trip"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_add"
            app:iconGravity="start"
            app:iconTint="@android:color/white" />

    </LinearLayout>
</ScrollView>
